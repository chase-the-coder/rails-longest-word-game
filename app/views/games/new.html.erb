<div class="container">
  <h1>New Game</h1>
  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="post" class="form">
    <%= hidden_field_tag :letters_token, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="guess" placeholder="Guess the longest word">
    <input type="submit">
  </form>
</div>

